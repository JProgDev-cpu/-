.container {
  padding-bottom: 120rpx;
}

.product-swiper {
  width: 100%;
  height: 750rpx;
}

.product-swiper image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
  background: #fff;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.product-price {
  color: #FF5722;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.specs-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.specs-list text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  padding: 10rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.action-bar button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 10rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.add-to-cart {
  background: #FFF3E0;
  color: #FF9800;
}

.buy-now {
  background: #4CAF50;
  color: white;
}

.add-to-cart::after,
.buy-now::after {
  border: none;
} 