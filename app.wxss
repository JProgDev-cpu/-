/**app.wxss**/
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #f5f5f5;
} 

/* 全局按钮样式 */
button {
  margin: 0;
  padding: 0;
  background: none;
  border: none;
  text-align: left;
  line-height: inherit;
}

button::after {
  border: none;
}

/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
} 