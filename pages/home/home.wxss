.container {
  background: #f5f5f5;
  min-height: 100vh;
}

.language-switcher {
  position: fixed;
  top: 0;
  right: 20rpx;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 0 0 15rpx 15rpx;
  padding: 10rpx 20rpx;
  display: flex;
  gap: 20rpx;
}

.language-switcher text {
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  color: #666;
}

.language-switcher .active {
  background: #4CAF50;
  color: white;
}

.banner-swiper {
  width: 100%;
  height: 400rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 30rpx 20rpx;
  color: #333;
}

.spots-grid {
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 30rpx;
}

.spot-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.spot-card:active {
  transform: scale(0.98);
}

.spot-image {
  width: 100%;
  height: 400rpx;
}

.spot-info {
  padding: 20rpx;
}

.spot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.spot-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.crowd-tag {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.level-1 {
  background: #4CAF50;
}

.level-2 {
  background: #FFC107;
}

.level-3 {
  background: #FF5722;
}

.spot-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.spot-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.ar-button {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background: #4CAF50;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
} 