.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.spot-card {
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.spot-image {
  width: 100%;
  height: 300rpx;
}

.spot-info {
  padding: 20rpx;
}

.spot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.spot-name {
  font-size: 34rpx;
  font-weight: bold;
}

.crowd-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.level-1 {
  background: #4CAF50;
}

.level-2 {
  background: #FFC107;
}

.level-3 {
  background: #FF5722;
}

.crowd-details {
  margin: 20rpx 0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.progress-bar {
  height: 20rpx;
  background: #eee;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.progress {
  height: 100%;
  background: #4CAF50;
  transition: width 0.3s ease;
} 